<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESCOMpras.Pages.CrearCuenta"
             Shell.BackgroundColor="SteelBlue"
             Title="Crear Cuenta">
    <VerticalStackLayout>
        <Label Text="Eres cliente o vendedor?" 
               Margin="0,30,0,30"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               FontSize="25" 
               FontAttributes="Bold"/>
        
        <Button Margin="60,20,60,0"
                Text="Cliente"
                x:Name="registroCliente" 
                Clicked="registroCliente_Clicked"
                BackgroundColor="SteelBlue"/>

        <Button Margin="60,20,60,0"
                Text="Vendedor"
                x:Name="registroVendedor" 
                Clicked="registroVendedor_Clicked"
                BackgroundColor="SteelBlue"/>

    </VerticalStackLayout>
</ContentPage>