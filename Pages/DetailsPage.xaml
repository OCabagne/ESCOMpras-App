<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test1.Pages.DetailsPage"
             xmlns:Cells="clr-namespace:ESCOMpras.Cells"
             Shell.BackgroundColor="SteelBlue"
             Title="">
    <VerticalStackLayout>
        <StackLayout Margin="0,0,0,0">
            <Cells:DetailsCard/>
        </StackLayout>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*">
            <Button Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Margin="10,10,10,0" BackgroundColor="SteelBlue" Text="Agregar al Carrito" x:Name="addToCart" Clicked="addToCart_Clicked"/>
            <Button Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Margin="50,10,50,0" BackgroundColor="SteelBlue" Text="Editar" x:Name="editarProducto" Clicked="editarProducto_Clicked"/>
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Margin="10,10,10,0" BackgroundColor="Grey" Text="Comprar ya" x:Name="buyNow" Clicked="buyNow_Clicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>